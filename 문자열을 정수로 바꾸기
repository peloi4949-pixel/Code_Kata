#include <string>
using namespace std;

int solution(string s) 
{
    int answer = 0;
    int sign = 1;
    int idx = 0;

    // 부호 처리
    if (s[0] == '-') 
{
        sign = -1;
        idx = 1;
    } else if (s[0] == '+') 
{
        idx = 1;
    }

    // 숫자 변환
    for (int i = idx; i < s.length(); i++) 
{
        answer = answer * 10 + (s[i] - '0');
    }

    return answer * sign;
}
